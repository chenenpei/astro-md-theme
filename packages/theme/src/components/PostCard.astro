---
import type { Locale } from '../i18n';
import { formatDate } from '../i18n';

interface Props {
  title: string;
  href: string;
  excerpt?: string;
  date?: Date | string;
  category?: string;
  coverImage?: string;
  coverImageAlt?: string;
  slug?: string;
  transitionNamePrefix?: string;
  source?: string;
  locale?: Locale;
}

const {
  title,
  href,
  excerpt,
  date,
  category,
  coverImage,
  coverImageAlt = title,
  slug,
  transitionNamePrefix = '',
  source,
  locale = 'zh'
} = Astro.props;

const hasCover = !!coverImage;

// Extract slug from href if not provided
const postSlug = slug || href.split('/').filter(Boolean).pop() || 'post';

// Build transition names with optional prefix
const titleTransitionName = transitionNamePrefix
  ? `${transitionNamePrefix}-post-title-${postSlug}`
  : `post-title-${postSlug}`;
const imageTransitionName = transitionNamePrefix
  ? `${transitionNamePrefix}-post-image-${postSlug}`
  : `post-image-${postSlug}`;

// Build href with source query param if provided
const linkHref = source ? `${href}?source=${source}` : href;

// Format date according to locale
const formattedDate = date ? formatDate(date, locale, 'short').toUpperCase() : '';

const metaText = category && formattedDate
  ? `${category.toUpperCase()} Â· ${formattedDate}`
  : category
    ? category.toUpperCase()
    : formattedDate;
---

<a href={linkHref} class="post-list-item">
  <div class={`post-content ${hasCover ? 'post-content--with-thumb' : ''}`}>
    {metaText && (
      <div class="post-meta">{metaText}</div>
    )}
    <h3 class="post-title" transition:name={titleTransitionName}>{title}</h3>
    {excerpt && (
      <p class="post-excerpt">{excerpt}</p>
    )}
  </div>
  {hasCover && (
    <div class="post-thumbnail">
      <img 
        src={coverImage} 
        alt={coverImageAlt}
        transition:name={imageTransitionName}
      />
    </div>
  )}
</a>

<style>
  .post-list-item {
    padding: 24px;
    border-bottom: 1px solid var(--border);
    cursor: pointer;
    transition: background 0.2s;
    display: flex;
    gap: 20px;
    align-items: flex-start;
    text-decoration: none;
    color: inherit;
    width: 100%;
  }
  .post-list-item:last-child {
    border-bottom: none;
  }

  .post-list-item:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }

  [data-theme="dark"] .post-list-item:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .post-thumbnail {
    flex-shrink: 0;
    width: 120px;
    height: 120px;
    border-radius: 4px;
    overflow: hidden;
    background-color: var(--border);
  }

  .post-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    flex: 1;
    min-width: 0; /* Allow text to shrink */
  }

  .post-content--with-thumb {
    /* When there's a thumbnail, content takes remaining space */
  }

  .post-meta {
    font-size: 0.75rem;
    color: var(--accent);
    font-weight: bold;
    letter-spacing: 1px;
    margin-bottom: 8px;
    font-family: var(--font-sans);
  }

  .post-title {
    margin: 0 0 8px 0;
    font-size: 1.3rem;
    font-family: var(--font-serif);
    font-weight: normal;
    line-height: 1.3;
  }

  .post-excerpt {
    margin: 0;
    font-size: 0.95rem;
    color: var(--text-sec);
    line-height: 1.6;
  }

  /* Mobile: Stack thumbnail above content if present */
  @media (max-width: 700px) {
    .post-list-item {
      flex-direction: column-reverse;
      gap: 12px;
    }

    .post-thumbnail {
      width: 100%;
      height: 200px;
    }

    .post-content--with-thumb {
      /* Reset when stacked */
    }
  }
</style>


---
import Layout from '@astro-md-theme/core/Layout.astro';
import { getCollection } from 'astro:content';
import { SITE } from '../config';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<Layout title={SITE.title}>
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <header class="mb-12">
      <h1 class="text-5xl font-bold mb-4">{SITE.title}</h1>
      <p class="text-xl text-gray-600">{SITE.description}</p>
    </header>

    <section>
      <h2 class="text-3xl font-bold mb-6">最新文章</h2>
      {posts.length === 0 ? (
        <div class="bg-gray-100 rounded-lg p-8 text-center">
          <p class="text-gray-600 mb-4">还没有文章，开始写第一篇吧！</p>
          <p class="text-sm text-gray-500">
            在 <code class="bg-gray-200 px-2 py-1 rounded">src/content/blog/</code> 目录下创建 Markdown 文件
          </p>
        </div>
      ) : (
        <ul class="space-y-6">
          {posts.map((post) => (
            <li class="border-b border-gray-200 pb-6 last:border-0">
              <a href={`/blog/${post.slug}`} class="block hover:text-blue-600 transition-colors">
                <h3 class="text-2xl font-semibold mb-2">{post.data.title}</h3>
                {post.data.description && (
                  <p class="text-gray-600 mb-2">{post.data.description}</p>
                )}
                <time class="text-sm text-gray-500">
                  {post.data.pubDate.toLocaleDateString('zh-CN')}
                </time>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>
  </main>
</Layout>


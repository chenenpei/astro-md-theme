---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  rssPath?: string;
}

const {
  title = "Astro MD Theme",
  description = "A minimalist blog theme",
  rssPath
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    {rssPath && <link rel="alternate" type="application/rss+xml" title={title} href={rssPath} />}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous" />
    <ViewTransitions />
    <script is:inline>
      // Initialize theme on page load
      (function() {
        const savedTheme = localStorage.getItem('theme') || 'light';
        document.documentElement.setAttribute('data-theme', savedTheme);
      })();

      // Dynamic View Transition Names for static pages
      function updateTransitionNames() {
        try {
          const currentUrl = window.location.href;
          const url = new URL(currentUrl);
          const source = url.searchParams.get('source');
          
          if (source && url.pathname.includes('/blog/')) {
            const pathParts = url.pathname.split('/').filter(Boolean);
            const slug = pathParts[pathParts.length - 1];
            
            if (slug) {
              // Try to find title in current document
              const title = document.querySelector('.paper-title');
              if (title) {
                title.style.viewTransitionName = `${source}-post-title-${slug}`;
              }
              
              const img = document.querySelector('.paper-cover-image');
              if (img) {
                img.style.viewTransitionName = `${source}-post-image-${slug}`;
              }
            }
          }
        } catch (e) {
          console.error('Error updating transition names:', e);
        }
      }

      // Run on initial load
      updateTransitionNames();

      // Run after swap (this works because script runs in the new document context)
      document.addEventListener('astro:after-swap', updateTransitionNames);
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>

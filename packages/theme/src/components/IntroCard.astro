---
interface Props {
  name: string;
  bio: string;
  avatar?: string;
  avatarAlt?: string;
  href?: string;
  socials?: {
    x?: string;
    instagram?: string;
    github?: string;
    email?: string;
  };
}

const { 
  name, 
  bio, 
  avatar,
  avatarAlt = name,
  href = "/about",
  socials
} = Astro.props;
---

<div class="intro-card">
  <a href={href} class="intro-card-link">
    {avatar ? (
      <img src={avatar} alt={avatarAlt} class="avatar" />
    ) : (
      <div class="avatar avatar--placeholder"></div>
    )}
    <div class="intro-text">
      <h2>Hi, I'm {name}</h2>
      <p>{bio}</p>
    </div>
  </a>
  
  {socials && (socials.x || socials.instagram || socials.github || socials.email) && (
    <div class="social-links">
      {socials.x && (
        <a href={socials.x} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="X (Twitter)">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
      )}
      {socials.instagram && (
        <a href={socials.instagram} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Instagram">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      )}
      {socials.github && (
        <a href={socials.github} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
      {socials.email && (
        <a href={`mailto:${socials.email}`} class="social-link" aria-label="Email">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M0 3v18h24v-18h-24zm6.623 7.929l-4.623 5.712v-9.458l4.623 3.746zm-4.141-5.929h19.035l-9.517 7.713-9.518-7.713zm5.694 7.188l3.824 3.099 3.83-3.104 5.612 6.817h-18.779l5.513-6.812zm9.208-1.264l4.616-3.741v9.348l-4.616-5.607z"/>
          </svg>
        </a>
      )}
    </div>
  )}
</div>

<style>
  .intro-card {
    padding: 30px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .intro-card-link {
    display: flex;
    align-items: center;
    gap: 24px;
    cursor: pointer;
    transition: transform 0.2s;
    text-decoration: none;
    color: inherit;
  }

  .intro-card-link:hover {
    transform: translateY(-2px);
  }

  .social-links {
    display: flex;
    gap: 16px;
    align-items: center;
    padding-top: 24px;
    border-top: 1px solid var(--border);
  }

  .social-link {
    color: var(--text-sec);
    transition: color 0.2s;
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .social-link:hover {
    color: var(--accent);
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    flex-shrink: 0;
    object-fit: cover;
  }

  .avatar--placeholder {
    background-color: #333;
  }

  [data-theme="dark"] .avatar--placeholder {
    background-color: #666;
  }

  .intro-text h2 {
    margin: 0 0 6px 0;
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: normal;
  }

  .intro-text p {
    margin: 0;
    color: var(--text-sec);
    font-size: 0.95rem;
  }

  @media (max-width: 700px) {
    .intro-card {
      padding: 20px;
    }

    .social-links {
      gap: 12px;
    }
  }
</style>


---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';

interface Props {
  siteTitle?: string;
  authorName?: string;
  authorBio?: string;
  authorAvatar?: string;
  content?: any;
}

const {
  siteTitle = "My Space.",
  authorName = "Your Name",
  authorBio,
  authorAvatar,
  content
} = Astro.props;
---

<Layout title={`About - ${siteTitle}`}>
  <Header siteTitle={siteTitle} currentPath="/about" />
  
  <main class="about-container">
    <div class="about-card md-card">
      <div class="about-header">
        <h1 class="about-title">About</h1>
      </div>

      {authorAvatar && (
        <div class="about-avatar">
          <img src={authorAvatar} alt={authorName} />
        </div>
      )}

      <div class="about-content">
        {authorBio && (
          <p class="lead">{authorBio}</p>
        )}
        <slot />
        {content && content()}
      </div>
    </div>
  </main>
</Layout>

<style>
  .about-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 0 20px;
  }

  .about-card {
    padding: 40px;
  }

  .about-header {
    margin-bottom: 30px;
  }

  .about-title {
    font-family: var(--font-serif);
    font-size: 2.8rem;
    margin-bottom: 10px;
    line-height: 1.1;
  }

  .about-avatar {
    margin-bottom: 30px;
    text-align: center;
  }

  .about-avatar img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
  }

  .about-content {
    font-size: 1.1rem;
    line-height: 1.8;
    font-family: var(--font-serif);
  }

  .about-content .lead {
    font-size: 1.3rem;
    color: var(--text-sec);
    margin-bottom: 2em;
  }

  .about-content :global(p) {
    margin-bottom: 1.2em;
  }

  .about-content :global(h2),
  .about-content :global(h3),
  .about-content :global(h4) {
    font-family: var(--font-serif);
    margin-top: 2em;
    margin-bottom: 1em;
  }

  @media (max-width: 700px) {
    .about-container {
      margin: 20px auto;
      padding: 0 12px;
    }

    .about-card {
      padding: 30px 20px;
    }

    .about-title {
      font-size: 2rem;
    }

    .about-content {
      font-size: 1rem;
    }
  }
</style>

